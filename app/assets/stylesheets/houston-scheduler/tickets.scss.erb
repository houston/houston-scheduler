.edit-estimates-view {
  
  table {
    border-collapse: separate;
    border-spacing: 0 2px;
    border: none;
  }
  
  .ticket, .headings {
    line-height: 34px;
    padding: 1px 0;
    
    &.saved { background-color: #cfc; }
    &.focus { background-color: #ffc; }
    &.unable-to-estimate {
      background-color: #efefef;
      color: #999;
    }
    
    > td {
      position: relative;
      border: none;
    
      &.ticket-summary { width: 72%; overflow: hidden; text-overflow: ellipsis; }
      &.ticket-value { width: 28%; }
    }
  }
  
  .headings div {
    height: auto;
    font-weight: bold;
  
    small { font-weight: normal; }
  }
  
  #tickets {
    margin: 0;
    padding: 0;
    position: relative;
    line-height: 34px;
  
    .output, input {
      text-align: right;
      font-size: 1.08em;
      padding: .33em .75em;
      position: absolute;
      left: .33em;
      top: .166em;
      bottom: .166em;
      right: 136px;
      width: auto;
      margin: 0;
    }
    
    button {
      position: absolute;
      top: .166em;
      right: .5em;
      font-size: 14px;
      
      &.active {
        background-color: #d6d6d6;
        color: #888;
      }
    }
  }
}

.table-unable-to-estimate-tickets td.ticket-summary { line-height: 30px; }

.ticket-prerequisites {
  text-shadow: none;
  color: #333;
  background-color: #bbb;
  
  a { color: #0670a5; }
  a:hover { color: rgb(0, 60, 90); }
}

tr.ticket-released {
  background: #ECF8FD;
  color: #62889E;
  //background: #F3FCE5;
  //color: #7BA33E;
}

tr.ticket-closed {
  background: #f4f4f4;
  color: #a4a4a4;
}

.hide-completed {
  tr.ticket-closed, tr.ticket-released { display: none; }
}

.check-out-button { white-space: nowrap; }
