<div class="flippable">
  <div class="sequence-ticket-front">
    <i class="ticket-type ticket-type-{{type}}"></i>
    <div class="sequence-ticket-summary"><div>
      {{summary}}
      <a href="{{ticketUrl}}" target="_blank">[#{{number}}]</a>
      {{#tags}}
        <span class="ticket-tag" style="background-color: #{{color}}">{{name}}</span>
      {{/tags}}
      {{#if milestoneName}}
        <span class="ticket-tag" style="background-color: #333">{{milestoneName}}</span>
      {{/if}}
    </div></div>
    <a class="sequence-ticket-edit"><i class="icon-double-angle-right"></i></a>
  </div>
</div>
