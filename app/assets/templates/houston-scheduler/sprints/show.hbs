<div id="graph" class="burndown-chart"></div>

<table class="table table-sortable table-milestone-tickets">
  <thead>
    <tr>
      <th class="ticket-effort">Effort</th>
      <th class="ticket-summary sort-desc">Summary</th>
      <td class="ticket-worker">Worker</td>
    </tr>
  </thead>
  <tbody id="tickets">
    {{#tickets}}
    <tr class="ticket {{#firstReleaseAt}}ticket-released{{/firstReleaseAt}} {{#closedAt}}ticket-closed{{/closedAt}}" data-ticket-id="{{id}}">
      <td class="ticket-effort">
        {{estimatedEffort}}
      </td>
      <td class="ticket-summary">
        {{summary}}
        <a href="{{ticketUrl}}" target="_blank" rel="tooltip" data-tooltip-placement="right" data-original-title="View in {{ticketSystem}}">[#{{number}}]</a>
        {{#tags}}
          <span class="ticket-tag" style="background-color: #{{color}}">{{name}}</span>
        {{/tags}}
        <a href="/tickets/{{id}}.json" class="ticket-details" tabindex="-1">more</a>
      </td>
      <td class="ticket-worker">
        {{#if checkedOut}}
          {{#if checkedOutByMe}}
            <button class="btn btn-danger check-out-button active" data-toggle="button">Check in</button>
          {{else}}
            Checked out by
            {{{avatar checkedOutBy/email 24 checkedOutBy/name}}}
          {{/if}}
        {{else}}
          <button class="btn btn-info check-out-button" data-toggle="button">Check out</button>
        {{/if}}
      </td>
    </tr>
    {{/tickets}}
  </tbody>
</table>

<a class="btn" href="#edit-sprint">Edit</a>
